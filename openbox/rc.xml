<?xml version='1.0' encoding='UTF-8'?>

<openbox_config xmlns='http://openbox.org/3.4/rc'>
  <resistance>
    <strength>10</strength>
    <screen_edge_strength>20</screen_edge_strength>
  </resistance>

  <focus>
    <focusNew>yes</focusNew>
    <followMouse>yes</followMouse>
    <focusLast>yes</focusLast>
    <underMouse>yes</underMouse>
    <focusDelay>0</focusDelay>
    <raiseOnFocus>no</raiseOnFocus>
  </focus>

  <placement>
    <policy>Smart</policy>
  </placement>

  <theme>
    <keepBorder>no</keepBorder>
  </theme>

  <desktops>
    <number>225</number>
    <firstdesk>113</firstdesk>
    <popupTime>1000</popupTime>
  </desktops>

  <resize>
    <drawContents>no</drawContents>
    <popupShow>Nonpixel</popupShow>
    <popupPosition>Center</popupPosition>
  </resize>

  <margins>
    <top>0</top>
    <bottom>0</bottom>
    <left>0</left>
    <right>0</right>
  </margins>

  <keyboard>
    <!-- General -->
    <chainQuitKey>C-g</chainQuitKey>
    <keybind key='W-p'><action name='Execute'><command>synclient MaxTapTime=180</command></action></keybind>
    <keybind key='W-S-p'><action name='Execute'><command>synclient MaxTapTime=0</command></action></keybind>

    <keybind key='W-S-x'><action name='Execute'><command>xtrlock</command></action></keybind>
    <keybind key='W-S-z'><action name='Execute'><command>locksleep</command></action></keybind><!-- lock and suspend -->

    <!-- Brightness -->
    <keybind key='W-m'><action name='Execute'><command>backlight +150</command></action></keybind>
    <keybind key='W-n'><action name='Execute'><command>backlight -150</command></action></keybind>
    <keybind key='S-W-m'><action name='Execute'><command>backlight 7500</command></action></keybind>
    <keybind key='S-W-n'><action name='Execute'><command>backlight 150</command></action></keybind>
    <keybind key='A-S-W-n'><action name='Execute'><command>backlight 0</command></action></keybind>
    <keybind key='XF86MonBrightnessUp'><action name='Execute'><command>backlight +150</command></action></keybind>
    <keybind key='XF86MonBrightnessDown'><action name='Execute'><command>backlight -150</command></action></keybind>
    <keybind key='S-XF86MonBrightnessUp'><action name='Execute'><command>backlight +750</command></action></keybind>
    <keybind key='S-XF86MonBrightnessDown'><action name='Execute'><command>backlight -750</command></action></keybind>


    <!-- Volume -->
    <keybind key='W-Down'><action name='Execute'><command>vol-delta-pa -4096</command></action></keybind>
    <keybind key='W-Up'><action name='Execute'><command>vol-delta-pa 4096</command></action></keybind>
    <keybind key='W-S-Down'><action name='Execute'><command>vol-delta-pa -1024</command></action></keybind>
    <keybind key='W-S-Up'><action name='Execute'><command>vol-delta-pa 1024</command></action></keybind>
    <keybind key='W-S-Left'><action name='Execute'><command>vol-absolute-pa 0</command></action></keybind>
    <keybind key='W-S-Right'><action name='Execute'><command>vol-absolute-pa 32768</command></action></keybind>
    <keybind key='W-Left'><action name='Execute'><command>vol-absolute-pa 19200</command></action></keybind>
    <keybind key='W-Right'><action name='Execute'><command>vol-absolute-pa 24000</command></action></keybind>
    <keybind key='XF86AudioRaiseVolume'><action name='Execute'><command>vol-delta-pa 1024</command></action></keybind>
    <keybind key='XF86AudioLowerVolume'><action name='Execute'><command>vol-delta-pa -1024</command></action></keybind>
    <keybind key='XF86AudioMute'><action name='Execute'><command>vol-mute-pa -1024</command></action></keybind>

    <!-- Keybindings for menus and dialogs -->
    <keybind key='A-F2'><action name='Execute'><command>gmrun</command></action></keybind>
    <keybind key='W-space'><action name='Execute'><command>gmrun</command></action></keybind>
    <keybind key='A-space'><action name='Execute'><command>gmrun</command></action></keybind>
    <keybind key='S-W-space'><action name='ShowMenu'><menu>client-menu</menu></action></keybind>
    <keybind key='S-A-space'><action name='ShowMenu'><menu>client-menu</menu></action></keybind>
    <keybind key='C-W-A-space'><action name='ShowMenu'><menu>root-menu</menu></action></keybind>

    <!-- Keybindings for windows, optimized to 1600x900 screen -->
    <keybind key='A-F4'><action name='Close'/></keybind>

    <keybind key='W-o'><action name='ToggleOmnipresent'></action></keybind>
    <keybind key='W-q'><action name='ToggleShowDesktop'/></keybind>
    <keybind key='S-W-d'><action name='ToggleShowDesktop'/></keybind>
    <keybind key='W-slash'><action name='ToggleShowDesktop'/></keybind>
    <keybind key='W-S-slash'><action name='ToggleShowDesktop'/></keybind>
    <keybind key='W-f'><action name='ToggleMaximize' /></keybind>
    <keybind key='W-v'><action name='ToggleMaximize'><direction>vertical</direction></action></keybind>
    <keybind key='W-g'><action name='ToggleMaximize'><direction>horizontal</direction></action></keybind>

    <keybind key='W-1'><action name='MoveResizeTo'><x>0</x></action></keybind>
    <keybind key='W-2'><action name='MoveResizeTo'><x>center</x></action></keybind>
    <keybind key='W-3'><action name='MoveResizeTo'><x>-0</x></action></keybind>
    <!--
    <keybind key='W-4'></keybind>
    <keybind key='W-5'></keybind>
    <keybind key='W-6'></keybind>
    -->
    <keybind key='W-7'><action name='MoveResizeTo'><y>0</y></action></keybind>
    <keybind key='W-8'><action name='MoveResizeTo'><y>center</y></action></keybind>
    <keybind key='W-9'><action name='MoveResizeTo'><y>-0</y></action></keybind>

    <keybind key='W-0'><action name='MoveResizeTo'><width>1920</width></action></keybind>
    <keybind key='W-minus'><action name='MoveResizeTo'><width>1280</width></action></keybind>
    <keybind key='W-equal'><action name='MoveResizeTo'><width>2560</width></action></keybind>
    <keybind key='W-S-0'><action name='MoveResizeTo'><height>1080</height></action></keybind>
    <keybind key='W-S-minus'><action name='MoveResizeTo'><height>720</height></action></keybind>
    <keybind key='W-S-equal'><action name='MoveResizeTo'><height>1440</height></action></keybind>

    <keybind key='W-C-h'><action name='MoveRelative'><x>-8</x><y>0</y></action></keybind>
    <keybind key='W-C-j'><action name='MoveRelative'><x>0</x><y>6</y></action></keybind>
    <keybind key='W-C-k'><action name='MoveRelative'><x>0</x><y>-6</y></action></keybind>
    <keybind key='W-C-l'><action name='MoveRelative'><x>8</x><y>0</y></action></keybind>

    <keybind key='A-h'><action name='ResizeRelative'><left>8</left></action></keybind>
    <keybind key='A-j'><action name='ResizeRelative'><bottom>6</bottom></action></keybind>
    <keybind key='A-k'><action name='ResizeRelative'><top>6</top></action></keybind>
    <keybind key='A-l'><action name='ResizeRelative'><right>8</right></action></keybind>
    <keybind key='A-S-h'><action name='ResizeRelative'><right>-8</right></action></keybind>
    <keybind key='A-S-j'><action name='ResizeRelative'><top>-6</top></action></keybind>
    <keybind key='A-S-k'><action name='ResizeRelative'><bottom>-6</bottom></action></keybind>
    <keybind key='A-S-l'><action name='ResizeRelative'><left>-8</left></action></keybind>

    <!-- Keybindings for applications -->
    <keybind key='W-t'><action name='Execute'><command>urxvt</command></action></keybind>
    <keybind key='W-S-w'><action name='Execute'><command>chromium-browser</command></action></keybind>
    <keybind key='W-S-f'><action name='Execute'><command>io.elementary.files</command></action></keybind>
    <keybind key='A-S-f'><action name='Execute'><command>nautilus --no-desktop</command></action></keybind>
    <keybind key='Print'><action name='Execute'><command>shutter -f</command></action></keybind>
    <keybind key='S-Print'><action name='Execute'><command>shutter -w</command></action></keybind>

    <!-- Keybindings for desktop switching -->
    <keybind key='W-q'><action name='GoToDesktop'><to>33</to></action></keybind>
    <keybind key='W-w'><action name='GoToDesktop'><to>38</to></action></keybind>
    <keybind key='W-e'><action name='GoToDesktop'><to>43</to></action></keybind>
    <keybind key='W-a'><action name='GoToDesktop'><to>108</to></action></keybind>
    <keybind key='W-s'><action name='GoToDesktop'><to>113</to></action></keybind>
    <keybind key='W-d'><action name='GoToDesktop'><to>118</to></action></keybind>
    <keybind key='W-z'><action name='GoToDesktop'><to>183</to></action></keybind>
    <keybind key='W-x'><action name='GoToDesktop'><to>188</to></action></keybind>
    <keybind key='W-c'><action name='GoToDesktop'><to>193</to></action></keybind>

    <keybind key='W-h'><action name='DesktopLeft'/></keybind>
    <keybind key='W-l'><action name='DesktopRight'/></keybind>
    <keybind key='W-k'><action name='DesktopUp'/></keybind>
    <keybind key='W-j'><action name='DesktopDown'/></keybind>

    <keybind key='S-W-h'><action name='SendToDesktopLeft'/></keybind>
    <keybind key='S-W-l'><action name='SendToDesktopRight'/></keybind>
    <keybind key='S-W-k'><action name='SendToDesktopUp'/></keybind>
    <keybind key='S-W-j'><action name='SendToDesktopDown'/></keybind>

    <!-- Keybindings for window switching -->
    <keybind key='W-Tab'><action name='NextWindow'><allDesktops>yes</allDesktops></action></keybind>
    <keybind key='W-S-Tab'><action name='PreviousWindow'><allDesktops>yes</allDesktops></action></keybind>
    <keybind key='A-Tab'><action name='NextWindow'/></keybind>
    <keybind key='A-S-Tab'><action name='PreviousWindow'/></keybind>
  </keyboard>

  <mouse>
    <dragThreshold>2</dragThreshold>
    <doubleClickTime>200</doubleClickTime>
    <screenEdgeWarpTime>0</screenEdgeWarpTime><!-- disable desktop flipping when dragging windows -->

    <context name='Frame'>
      <mousebind button='A-Left' action='Press'>
        <action name='Focus'/>
        <action name='Raise'/>
      </mousebind>
      <mousebind button='A-Left' action='Drag'>
        <action name='Move'/>
      </mousebind>
      <mousebind button='A-S-Left' action='Drag'>
        <action name='Resize'/>
      </mousebind>
    </context>

    <context name='Client'>
      <mousebind button='Left' action='Press'>
        <action name='Focus'/>
        <action name='Raise'/>
      </mousebind>
      <mousebind button='Middle' action='Press'>
        <action name='Focus'/>
        <action name='Raise'/>
      </mousebind>
      <mousebind button='Right' action='Press'>
        <action name='Focus'/>
        <action name='Raise'/>
      </mousebind>
    </context>

    <context name='Root'>
      <mousebind button='Right' action='Press'>
        <action name='ShowMenu'><menu>root-menu</menu></action>
      </mousebind>
    </context>
  </mouse>


  <menu>
    <file>menu.xml</file>
    <hideDelay>200</hideDelay>
    <middle>no</middle>
    <submenuShowDelay>100</submenuShowDelay>
    <applicationIcons>no</applicationIcons>
  </menu>

  <applications>
    <application name='*'>
      <decor>no</decor>
      <shade>no</shade>
    </application>
    <application name='Conky'>
      <layer>below</layer>
    </application>
  </applications>
</openbox_config>
