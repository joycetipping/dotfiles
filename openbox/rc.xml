<?xml version="1.0" encoding="UTF-8"?>

<openbox_config xmlns="http://openbox.org/3.4/rc">
  <resistance>
    <strength>10</strength>
    <screen_edge_strength>20</screen_edge_strength>
  </resistance>

  <focus>
    <focusNew>yes</focusNew>
    <followMouse>yes</followMouse>
    <focusLast>yes</focusLast>
    <underMouse>yes</underMouse>
    <focusDelay>0</focusDelay>
    <raiseOnFocus>no</raiseOnFocus>
  </focus>

  <placement>
    <policy>Smart</policy>
  </placement>

  <theme>
    <keepBorder>no</keepBorder>
  </theme>

  <desktops>
    <number>100</number>
    <firstdesk>1</firstdesk>
    <popupTime>500</popupTime>
  </desktops>

  <resize>
    <drawContents>no</drawContents>
    <popupShow>Nonpixel</popupShow>
    <popupPosition>Center</popupPosition>
  </resize>

  <margins>
    <top>0</top>
    <bottom>0</bottom>
    <left>0</left>
    <right>0</right>
  </margins>

  <keyboard>
    <!-- General -->
    <chainQuitKey>C-g</chainQuitKey>
    <keybind key='W-p'><action name='Execute'><command>synclient TouchpadOff=0</command></action></keybind>
    <keybind key='W-S-p'><action name='Execute'><command>synclient TouchpadOff=1</command></action></keybind>

    <keybind key="W-Q"><action name="Execute"><command>xtrlock</command></action></keybind>
    <keybind key='W-Escape'><action name='Execute'><command>locksleep</command></action></keybind><!-- lock and suspend -->

    <keybind key='XF86MonBrightnessUp'><action name='Execute'><command>backlight +100</command></action></keybind>
    <keybind key='XF86MonBrightnessDown'><action name='Execute'><command>backlight -100</command></action></keybind>
    <keybind key='S-XF86MonBrightnessUp'><action name='Execute'><command>backlight +5</command></action></keybind>
    <keybind key='S-XF86MonBrightnessDown'><action name='Execute'><command>backlight -5</command></action></keybind>
    <keybind key='W-b'><action name='Execute'><command>backlight 852</command></action></keybind>
    <keybind key='W-S-b'><action name='Execute'><command>backlight 2</command></action></keybind>

    <keybind key='XF86AudioRaiseVolume'><action name='Execute'><command>vol-delta-pa 1024</command></action></keybind>
    <keybind key='XF86AudioLowerVolume'><action name='Execute'><command>vol-delta-pa -1024</command></action></keybind>
    <keybind key='S-XF86AudioRaiseVolume'><action name='Execute'><command>vol-delta-pa 4096</command></action></keybind>
    <keybind key='S-XF86AudioLowerVolume'><action name='Execute'><command>vol-delta-pa -4096</command></action></keybind>
    <keybind key='XF86AudioMute'><action name='Execute'><command>vol-mute 1</command></action></keybind>

    <!-- Keybindings for menus and dialogs-->
    <keybind key="A-F2"><action name="Execute"><command>gmrun</command></action></keybind>
    <keybind key="W-space"><action name="Execute"><command>gmrun</command></action></keybind>
    <keybind key="S-W-space"><action name="ShowMenu"><menu>client-menu</menu></action></keybind>
    <keybind key="C-W-A-space"><action name="ShowMenu"><menu>root-menu</menu></action></keybind>

    <!-- Keybindings for windows -->
    <keybind key="A-F4"><action name="Close"/></keybind>

    <keybind key='W-s'><action name='ToggleOmnipresent'></action></keybind>
    <keybind key="W-d"><action name="ToggleShowDesktop"/></keybind>
    <keybind key='W-f'><action name='ToggleMaximize' /></keybind>
    <keybind key='W-v'><action name='ToggleMaximize'><direction>vertical</direction></action></keybind>
    <keybind key='W-g'><action name='ToggleMaximize'><direction>horizontal</direction></action></keybind>

    <keybind key='W-1'>
      <action name='Unmaximize'><direction>horizontal</direction></action>
      <action name='MoveResizeTo'><x>0</x></action>
    </keybind>
    <keybind key='W-2'>
      <action name='Unmaximize'><direction>horizontal</direction></action>
      <action name='MoveResizeTo'><x>400</x></action>
    </keybind>
    <keybind key='W-3'>
      <action name='Unmaximize'><direction>horizontal</direction></action>
      <action name='MoveResizeTo'><x>800</x></action>
    </keybind>
    <keybind key='W-4'>
      <action name='Unmaximize'><direction>horizontal</direction></action>
      <action name='MoveResizeTo'><x>1200</x></action>
    </keybind>
    <keybind key='W-5'>
      <action name='Unmaximize'></action>
      <action name='MoveResizeTo'><x>center</x></action>
    </keybind>
    <keybind key='W-6'>
      <action name='Unmaximize'><direction>vertical</direction></action>
      <action name='MoveResizeTo'><y>center</y></action>
    </keybind>
    <keybind key='W-7'>
      <action name='Unmaximize'><direction>vertical</direction></action>
      <action name='MoveResizeTo'><y>0</y></action>
    </keybind>
    <keybind key='W-8'>
      <action name='Unmaximize'><direction>vertical</direction></action>
      <action name='MoveResizeTo'><y>225</y></action>
    </keybind>
    <keybind key='W-9'>
      <action name='Unmaximize'><direction>vertical</direction></action>
      <action name='MoveResizeTo'><y>450</y></action>
    </keybind>
    <keybind key='W-0'>
      <action name='Unmaximize'><direction>vertical</direction></action>
      <action name='MoveResizeTo'><y>675</y></action>
    </keybind>
    <keybind key='W-S-1'>
      <action name='Unmaximize'></action>
      <action name='MoveResizeTo'><width>800</width><height>450</height><x>0</x><y>0</y></action>
    </keybind>
    <keybind key='W-S-2'>
      <action name='Unmaximize'></action>
      <action name='MoveResizeTo'><width>800</width><height>450</height><x>800</x><y>0</y></action>
    </keybind>
    <keybind key='W-S-3'>
      <action name='Unmaximize'></action>
      <action name='MoveResizeTo'><width>800</width><height>450</height><x>0</x><y>450</y></action>
    </keybind>
    <keybind key='W-S-4'>
      <action name='Unmaximize'></action>
      <action name='MoveResizeTo'><width>800</width><height>450</height><x>800</x><y>450</y></action>
    </keybind>
    <keybind key='W-S-5'>
      <action name='Unmaximize'></action>
      <action name='MoveResizeTo'><width>800</width><height>450</height><x>center</x><y>center</y></action>
    </keybind>
    <keybind key='W-S-6'>
      <action name='Unmaximize'></action>
      <action name='MoveResizeTo'><width>400</width><height>225</height><x>center</x><y>center</y></action>
    </keybind>
    <keybind key='W-S-7'>
      <action name='Unmaximize'></action>
      <action name='MoveResizeTo'><width>400</width><height>225></height><x>0</x><y>0</y></action>
    </keybind>
    <keybind key='W-S-8'>
      <action name='Unmaximize'></action>
      <action name='MoveResizeTo'><width>1200</width><height>675></height><x>400</x><y>0</y></action>
    </keybind>
    <keybind key='W-S-9'>
      <action name='Unmaximize'></action>
      <action name='MoveResizeTo'><width>1200</width><height>675</height><x>0</x><y>225</y></action>
    </keybind>
    <keybind key='W-S-0'>
      <action name='Unmaximize'></action>
      <action name='MoveResizeTo'><width>400</width><height>225></height><x>1200</x><y>675</y></action>
    </keybind>
    <keybind key='W-minus'>
      <action name='Unmaximize'><direction>horizontal</direction></action>
      <action name='ResizeRelative'><right>-8</right></action>
    </keybind>
    <keybind key='W-equal'>
      <action name='Unmaximize'><direction>horizontal</direction></action>
      <action name='ResizeRelative'><right>8</right></action>
    </keybind>
    <keybind key='W-S-minus'>
      <action name='Unmaximize'><direction>vertical</direction></action>
      <action name='ResizeRelative'><bottom>-6</bottom></action>
    </keybind>
    <keybind key='W-S-equal'>
      <action name='Unmaximize'><direction>vertical</direction></action>
      <action name='ResizeRelative'><bottom>6</bottom></action>
    </keybind>
    <keybind key='W-C-h'><action name='MoveRelative'><x>-8</x><y>0</y></action></keybind>
    <keybind key='W-C-j'><action name='MoveRelative'><x>0</x><y>6</y></action></keybind>
    <keybind key='W-C-k'><action name='MoveRelative'><x>0</x><y>-6</y></action></keybind>
    <keybind key='W-C-l'><action name='MoveRelative'><x>8</x><y>0</y></action></keybind>

    <!-- Keybindings for applications -->
    <keybind key="W-t"><action name="Execute"><command>urxvt</command></action></keybind>
    <keybind key="W-w"><action name="Execute"><command>chromium-browser</command></action></keybind>

    <!-- Keybindings for desktop switching -->
    <keybind key='W-bracketleft'><action name='GoToDesktop'><to>23</to></action></keybind>
    <keybind key='W-bracketright'><action name='GoToDesktop'><to>28</to></action></keybind>
    <keybind key='W-backslash'><action name='GoToDesktop'><to>45</to></action></keybind>
    <keybind key='W-semicolon'><action name='GoToDesktop'><to>73</to></action></keybind>
    <keybind key='W-apostrophe'><action name='GoToDesktop'><to>78</to></action></keybind>

    <keybind key="W-h"><action name="DesktopLeft"/></keybind>
    <keybind key="W-l"><action name="DesktopRight"/></keybind>
    <keybind key="W-k"><action name="DesktopUp"/></keybind>
    <keybind key="W-j"><action name="DesktopDown"/></keybind>

    <keybind key="W-Left"><action name="DesktopLeft"/></keybind>
    <keybind key="W-Right"><action name="DesktopRight"/></keybind>
    <keybind key="W-Up"><action name="DesktopUp"/></keybind>
    <keybind key="W-Down"><action name="DesktopDown"/></keybind>

    <keybind key="S-W-h"><action name="SendToDesktopLeft"/></keybind>
    <keybind key="S-W-l"><action name="SendToDesktopRight"/></keybind>
    <keybind key="S-W-k"><action name="SendToDesktopUp"/></keybind>
    <keybind key="S-W-j"><action name="SendToDesktopDown"/></keybind>

    <keybind key="S-W-Left"><action name="SendToDesktopLeft"/></keybind>
    <keybind key="S-W-Right"><action name="SendToDesktopRight"/></keybind>
    <keybind key="S-W-Up"><action name="SendToDesktopUp"/></keybind>
    <keybind key="S-W-Down"><action name="SendToDesktopDown"/></keybind>

    <!-- Keybindings for window switching -->
    <keybind key="W-Tab"><action name="NextWindow"><allDesktops>yes</allDesktops></action></keybind>
    <keybind key="W-S-Tab"><action name="PreviousWindow"><allDesktops>yes</allDesktops></action></keybind>
    <keybind key="A-Tab"><action name="NextWindow"/></keybind>
    <keybind key="A-S-Tab"><action name="PreviousWindow"/></keybind>
  </keyboard>

  <mouse>
    <dragThreshold>2</dragThreshold>
    <doubleClickTime>200</doubleClickTime>
    <screenEdgeWarpTime>0</screenEdgeWarpTime><!-- disable desktop flipping when dragging windows -->

    <context name="Frame">
      <mousebind button="A-Left" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
      </mousebind>

      <mousebind button="A-Left" action="Drag">
        <action name="Move"/>
      </mousebind>

      <mousebind button="A-S-Left" action="Drag">
        <action name="Resize"/>
      </mousebind>
    </context>

    <context name="Client">
      <mousebind button="Left" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
      </mousebind>

      <mousebind button="Middle" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
      </mousebind>

      <mousebind button="Right" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
      </mousebind>
    </context>

    <context name="Root">
      <mousebind button="Right" action="Press">
        <action name="ShowMenu"><menu>root-menu</menu></action>
      </mousebind>
    </context>
  </mouse>

  <menu>
    <file>menu.xml</file>
    <hideDelay>200</hideDelay>
    <middle>no</middle>
    <submenuShowDelay>100</submenuShowDelay>
    <applicationIcons>no</applicationIcons>
  </menu>

  <applications>
    <application name='*'>
      <decor>no</decor>
      <shade>no</shade>
    </application>

    <application name='Conky'>
      <layer>below</layer>
    </application>
  </applications>
</openbox_config>
